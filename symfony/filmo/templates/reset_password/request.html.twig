{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="d-flex justify-content-center">
        <div class="card my-5 mx-5" style="width: 35rem;">
            <div class="card-body">
                <p class="card-text">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email, {
                            'attr': {
                                'placeholder': 'Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.'
                            }
                        }) }}
                        <button class="btn btn-primary" id="submit_reset">Envoyer</button>
                    {{ form_end(requestForm) }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
